<h1>投稿一覧</h1>
<p><%= notice %></p>
<table>

<% @pictures.each do |picture| %>
  <tr>
    <td>ユーザー:<%= picture.user.name %></td>
  </tr>
  <tr>
    <td>内容:<%= picture.content %></td>
  </tr>
    <td>写真:<%= image_tag picture.picture.url if picture.picture.present? %></td>
    <td><%= link_to '詳細確認', picture_path(picture.id) %></td>
    <td><%= link_to "編集する", edit_picture_path(picture.id) , data: { confirm: '編集しますか？' } %></td>
    <td><%= link_to '削除する', picture_path(picture.id), method: :delete , data: { confirm: '本当に削除しますか？' } %></td>
  </tr>

<% end %>
</table>

<%= link_to '新しい投稿をする', new_picture_path %>