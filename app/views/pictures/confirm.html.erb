<h3>以下の内容で、投稿する。</h3>

<%= form_with(model: @picture, local: true,url: choose_new_or_edit) do |form| %>
  <%= form.hidden_field :content %>
  <p>本文:<%= @picture.content %></p>
  <%= form.hidden_field :picture_cache %></p>
  <p>写真:<%= image_tag(@picture.picture.url) if @picture.picture && @picture.picture.url %>
  <%= form.submit  "登録する" %>
<% end %>

<%= form_with(model: @picture, local: true,url:new_picture_path, method:"get") do |form| %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :picture_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>
